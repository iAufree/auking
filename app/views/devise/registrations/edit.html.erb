<% provide(:title, 'Edit Profile') %>
  
  <div class="form col-md-5 col-md-offset-1">
    <div id="cool-form">
  <h1>Edit <%= resource_name.to_s.humanize %></h1>

  <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put, multipart: true }) do |f| %>
    <%= devise_error_messages! %>
    <div>
      <%= f.select :gender, 
        options_for_select([['保密', 1], ['男生', 2], ['女生', 3]], current_user.gender),
        {}, { class: 'span3 controls controls-row' } %>
      
    </div>
    <div>
      <%= f.text_field :name, placeholder: "Name" %>
    </div>
    
    <div class="uploader-avatar">
        <%= image_tag(@user.avatar_url(:thumb), class: "pull-left avatar") %>
      <div class="uploader pull-left">
        <%= f.file_field :avatar %>
        <p>
          <%= f.check_box :remove_avatar %>
          Remove avatar
        </p>  
        <%= f.hidden_field :avatar_cache %>
      </div>
    </div>

    <div>
      <%= f.email_field :email, :autofocus => true, placeholder: "Email", disabled: "disabled" %>
    </div>

    <div>
      <%= f.text_field :qq, placeholder: "QQ Number" %>
    </div>

    <div>
      <%= f.text_field :city, placeholder: "City" %>
    </div>

    <div>
      <%= f.select :school, 
        options_for_select([['信工学院', 1], ['药学院', 2], ['商学院', 3]], current_user.school),
        {}, { class: 'span3 controls controls-row' } %>
    </div>

    <div>
      <%= f.text_field :description, placeholder: "Description" %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div> <i>(leave blank if you don't want to change it)</i><br />
    <%= f.password_field :password, :autocomplete => "off", placeholder: "Password" %></div>

    <div>
    <%= f.password_field :password_confirmation, placeholder: "Confirmation" %></div>

    <div> <i>(we need your current password to confirm your changes)</i><br />
    <%= f.password_field :current_password, placeholder: "Current Password" %></div>

    <div><%= f.submit "Update" %></div>
  <% end %>
  </div>
  </div>

  <div class="form col-md-5">
    <div id="cool-form">
  <h1>Cancel my account</h1>

  <%= button_to "Cancel my account", registration_path(resource_name), :data => { :confirm => "Are you sure?" }, :method => :delete %>

  <%= link_to "Back", :back, class: "btn btn-lg btn-info col-md-12" %>
  </div>
  </div>
